<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 만들기"
        android:textSize="50dp"
        android:textColor="#ff0b0209"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="  방 제목"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#fff9ca34"/>

        <EditText
            android:id="@+id/etDialRoomName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="  비밀번호"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#fff9ca34"/>

        <EditText
            android:id="@+id/etDialRoomPasswd"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="  인   원"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#fff9ca34"/>

        <RadioGroup
            android:id="@+id/rgDialNum"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rbDialNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="4명"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <RadioButton
                android:id="@+id/rbDialNum5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5명"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <RadioButton
                android:id="@+id/rbDialNum6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6명"
                android:textColor="#000000"
                android:textSize="15dp"/>

        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btnDialRoomYes"
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:text="확    인"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btnDialRoomNo"
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:text="취    소"
            android:textColor="#000000"
            android:textSize="30dp"/>


    </LinearLayout>

</LinearLayout>