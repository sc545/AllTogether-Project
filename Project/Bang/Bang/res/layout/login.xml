<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/round4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="80dp">
        

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text=" 아이디"
            android:textSize="40dp"
            android:textColor="#000000"
            android:background="#fff9ca34"/>

        <EditText
            android:id="@+id/etLoginId"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:maxLength="12"
            android:textSize="40dp"
            android:textColor="#000000"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text=" 비밀번호"
            android:textSize="40dp"
            android:textColor="#000000"
            android:background="#fff9ca34"
            />

        <EditText
            android:id="@+id/etLoginPasswd"
            android:inputType="textPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:maxLength="12"
            android:textSize="40dp"
            android:textColor="#000000"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLoginJoin"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:onClick="tvOn"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:text="접속하기"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLoginFind"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:onClick="tvOn"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:text="아이디 찾기"
            android:textColor="#000000"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnLoginMember"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLoginEsc"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:text="종    료"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>